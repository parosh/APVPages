.grid-container {
  display: inline-grid;
  grid-template-columns: auto auto auto;
  background-color: rgba(220,220,220,1) ;
  padding: 50px;
}

.grid-item {
  background-color: rgba(255, 255, 255, 0.8);
  border: 2px solid rgba(0, 0, 0, 1);
  padding: 20px;
  font-size: 30px;
  text-align: center;
}


